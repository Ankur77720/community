<body>
  <div id="main">
    <div class="navBar">
      <div class="left">
        <i class="ri-menu-fill"></i>
        All Books
      </div>
      <div class="right">
        <a href="/profile">
          <i class="ri-user-6-fill"></i>
        </a>
      </div>
    </div>
    <div class="books">
      <% books.forEach(book=>{ %>
      <div class="book">
        <div class="left">
          <img src="/images/uploads/<%= book.images %>" alt="">
        </div>
        <div class="right">
          <div class="text">
            <div class="title">
              <h3><%= book.title %></h3>
              <small><%= book.class %></small>
            </div>
            <small><%= book.board %></small>
          </div>
          <a href="/bookDetails/<%= book._id %>" class="button">Get book</a>
        </div>
      </div>
      <% }) %>

    </div>
    <div class="bottomNavBar">
      <select name="location" id="location">
        <option value="bhopal">Bhopal</option>
        <option value="indore">Indore</option>
        <option value="delhi">Delhi</option>
      </select>
      <button onclick="(()=>{window.location.href='/addBook'})()" class="button">Add book</button>
    </div>
  </div>
  <script>
    // Register the service worker
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/serviceWorker.js', {
            scope: '/'
          })
          .then(registration => {
            console.log('Service Worker registered:', registration);
          })
          .catch(error => {
            console.log('Service Worker registration failed:', error);
          });
      });
    }
  </script>
